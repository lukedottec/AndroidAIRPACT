<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="wsu_airpact_project.airpact_demo.WebActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Page"
        android:id="@+id/buttonGetPage"
        android:onClick="getPage"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/textViewPage"
        android:layout_alignLeft="@+id/textViewURLTried"
        android:layout_alignStart="@+id/textViewURLTried"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextURL"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="http://lar.wsu.edu/airpact/AP4_mobile/ap4_mobile.aspx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewPage"
        android:textSize="10dp"
        android:maxLines="10000"
        android:scrollbars="vertical"
        android:layout_below="@+id/buttonSetPHPQuery"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query"
        android:id="@+id/checkBoxQuery"
        android:layout_below="@+id/editTextURL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextQuery"
        android:layout_below="@+id/editTextURL"
        android:layout_toRightOf="@+id/checkBoxQuery"
        android:layout_toEndOf="@+id/checkBoxQuery"
        android:text="sta=Pullman-Dexter+Ave"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIR PACT"
        android:id="@+id/buttonSetAP"
        android:layout_below="@+id/checkBoxQuery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/checkBoxQuery"
        android:layout_alignEnd="@+id/checkBoxQuery"
        android:onClick="setAP"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHP QUERY"
        android:id="@+id/buttonSetPHPQuery"
        android:onClick="setPHPQuery"
        android:layout_below="@+id/buttonSetAP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textViewURLTried"
        android:layout_toStartOf="@+id/textViewURLTried"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="none"
        android:id="@+id/textViewURLTried"
        android:layout_below="@+id/editTextQuery"
        android:layout_alignLeft="@+id/editTextQuery"
        android:layout_alignStart="@+id/editTextQuery"
        android:visibility="invisible"/>

</RelativeLayout>
